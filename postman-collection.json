{
  "info": {
    "name": "Wallet Service API (live)",
    "description": "Complete API collection for Wallet Service with JWT and API Key authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://wallet-service-production-a3df.up.railway.app",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "api_key",
      "value": "",
      "type": "string"
    },
    {
      "key": "wallet_number",
      "value": "",
      "type": "string"
    },
    {
      "key": "reference",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Google OAuth - Initiate",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/google",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "google"]
            },
            "description": "Opens Google OAuth login page. Use browser to complete flow."
          }
        },
        {
          "name": "Google OAuth - Callback (Manual)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/google/callback",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "google", "callback"]
            },
            "description": "This is automatically called by Google. Copy JWT from response."
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', response.access_token);",
                  "    pm.collectionVariables.set('wallet_number', response.user.wallet_number);",
                  "    console.log('JWT Token saved:', response.access_token);",
                  "    console.log('Wallet Number saved:', response.user.wallet_number);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "API Keys",
      "item": [
        {
          "name": "Create API Key",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"test-api-key\",\n  \"permissions\": [\"read\", \"deposit\", \"transfer\"],\n  \"expiry\": \"1D\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/keys/create",
              "host": ["{{baseUrl}}"],
              "path": ["keys", "create"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('api_key', response.api_key);",
                  "    console.log('API Key saved:', response.api_key);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Rollover API Key",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"expired_key_id\": \"PASTE_EXPIRED_KEY_ID_HERE\",\n  \"expiry\": \"1M\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/keys/rollover",
              "host": ["{{baseUrl}}"],
              "path": ["keys", "rollover"]
            }
          }
        },
        {
          "name": "Revoke API Key",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/keys/:keyId/revoke",
              "host": ["{{baseUrl}}"],
              "path": ["keys", ":keyId", "revoke"],
              "variable": [
                {
                  "key": "keyId",
                  "value": "PASTE_KEY_ID_HERE"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Wallet Operations (JWT)",
      "item": [
        {
          "name": "Deposit - Initialize",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 5000\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/wallet/deposit",
              "host": ["{{baseUrl}}"],
              "path": ["wallet", "deposit"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('reference', response.reference);",
                  "    console.log('Payment Link:', response.authorization_url);",
                  "    console.log('Reference saved:', response.reference);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Get Wallet Balance",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/wallet/balance",
              "host": ["{{baseUrl}}"],
              "path": ["wallet", "balance"]
            }
          }
        },
        {
          "name": "Transfer to Wallet",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"wallet_number\": \"RECIPIENT_WALLET_NUMBER\",\n  \"amount\": 1000\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/wallet/transfer",
              "host": ["{{baseUrl}}"],
              "path": ["wallet", "transfer"]
            }
          }
        },
        {
          "name": "Transaction History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/wallet/transactions",
              "host": ["{{baseUrl}}"],
              "path": ["wallet", "transactions"]
            }
          }
        },
        {
          "name": "Check Deposit Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/wallet/deposit/{{reference}}/status",
              "host": ["{{baseUrl}}"],
              "path": ["wallet", "deposit", "{{reference}}", "status"]
            }
          }
        }
      ]
    },
    {
      "name": "Wallet Operations (API Key)",
      "item": [
        {
          "name": "Get Balance (API Key)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-api-key",
                "value": "{{api_key}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/wallet/balance",
              "host": ["{{baseUrl}}"],
              "path": ["wallet", "balance"]
            }
          }
        },
        {
          "name": "Deposit (API Key)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "x-api-key",
                "value": "{{api_key}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"amount\": 3000\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/wallet/deposit",
              "host": ["{{baseUrl}}"],
              "path": ["wallet", "deposit"]
            }
          }
        },
        {
          "name": "Transfer (API Key)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "x-api-key",
                "value": "{{api_key}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"wallet_number\": \"RECIPIENT_WALLET_NUMBER\",\n  \"amount\": 500\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/wallet/transfer",
              "host": ["{{baseUrl}}"],
              "path": ["wallet", "transfer"]
            }
          }
        },
        {
          "name": "Transaction History (API Key)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "x-api-key",
                "value": "{{api_key}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/wallet/transactions",
              "host": ["{{baseUrl}}"],
              "path": ["wallet", "transactions"]
            }
          }
        }
      ]
    },
    {
      "name": "Webhook (Testing)",
      "item": [
        {
          "name": "Simulate Paystack Webhook",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "x-paystack-signature",
                "value": "COMPUTED_HMAC_SIGNATURE",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"event\": \"charge.success\",\n  \"data\": {\n    \"reference\": \"{{reference}}\",\n    \"amount\": 500000,\n    \"status\": \"success\",\n    \"paid_at\": \"2024-01-01T12:00:00Z\",\n    \"customer\": {\n      \"email\": \"test@example.com\"\n    }\n  }\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/wallet/paystack/webhook",
              "host": ["{{baseUrl}}"],
              "path": ["wallet", "paystack", "webhook"]
            },
            "description": "Note: You need to compute HMAC signature manually or disable validation for testing"
          }
        }
      ]
    }
  ]
}
